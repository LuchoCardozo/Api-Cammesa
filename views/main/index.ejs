<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Index</title>
</head>

<body>
    <h1>INDEX</h1>

    <h2>MAS VISITADOS</h2>
    <% products.forEach(prod=> { %>
        <% if (prod.type=="visited" ) { %>
            <div class="container-product">
                <a href="/products/detail/<%= prod.id %> ">
                    <h3>ID: <%= prod.id %>
                    </h3>
                    <h3>NOMBRE: <%= prod.name %>
                    </h3>
                </a>
            </div>
            <% } %>
                <% }) %>

                    <h2>OFERTAS</h2>
                    <% products.forEach(prod=> { %>
                        <% if (prod.type=="in-sale" ) { %>
                            <div class="container-product">
                                <a href="/products/detail/<%= prod.id %> ">
                                    <h3>ID: <%= prod.id %>
                                    </h3>
                                    <h3>NOMBRE: <%= prod.name %>
                                    </h3>
                                </a>
                            </div>
                            <% } %>
                                <% }) %>

                                    <h2>NUEVOS</h2>
                                    <% products.forEach(prod=> { %>
                                        <% if (prod.type=="new" ) { %>
                                            <div class="container-product">
                                                <a href="/products/detail/<%= prod.id %> ">
                                                    <h3>ID: <%= prod.id %>
                                                    </h3>
                                                    <h3>NOMBRE: <%= prod.name %>
                                                    </h3>
                                                </a>
                                            </div>
                                            <% } %>
                                                <% }) %>


</body>

</html>